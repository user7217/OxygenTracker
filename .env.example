# Example environment configuration for local development
# Copy this file to .env and update with your actual values

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/oxygen_tracker

# Individual PostgreSQL settings (optional, used as fallback)
PGHOST=localhost
PGPORT=5432
PGDATABASE=oxygen_tracker
PGUSER=postgres
PGPASSWORD=your_password

# Flask Configuration
SESSION_SECRET=your-very-long-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=1

# Optional: Email configuration (for admin statistics emails)
# SENDGRID_API_KEY=your_sendgrid_api_key
# ADMIN_EMAIL=your-email@domain.com